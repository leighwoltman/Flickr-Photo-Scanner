<Window x:Class="PDFScanningApp.WindowSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="600" 
        Width="550" 
        ResizeMode="NoResize" 
        SizeToContent="Height"
        Icon="External/Icon/Umut-Pulat-Tulliana-2-Scanner.ico" 
        WindowStartupLocation="CenterOwner" 
        ShowInTaskbar="False" >
  <DockPanel>
    <Grid x:Name="InfoGrid" DockPanel.Dock="Top" Margin="30, 10, 10, 20">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="10*" />
        <ColumnDefinition Width="3*" />
        <ColumnDefinition Width="5*" />
        <ColumnDefinition Width="5*" />
      </Grid.ColumnDefinitions>
    </Grid>
    <WrapPanel x:Name="ButtonsPanel" 
                 DockPanel.Dock="Bottom" 
                 Margin="5, 5, 15, 5" 
                 HorizontalAlignment="Right"
                 VerticalAlignment="Bottom">
      <Button x:Name="ButtonOK" Content="OK" Width="75" Margin="2" IsDefault="True" Click="ButtonOK_Click"/>
      <Button x:Name="ButtonCancel" Content="Cancel" Width="75" Margin="2" IsCancel="True" Click="ButtonCancel_Click"/>
    </WrapPanel>
  </DockPanel>

</Window>
