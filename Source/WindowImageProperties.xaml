<Window x:Class="PDFScanningApp.WindowImageProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Properties" 
        Height="300" 
        Width="300"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
  <DockPanel>
    <Grid x:Name="InfoGrid" DockPanel.Dock="Top" Margin="10">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*" />
        <ColumnDefinition Width="3*" />
      </Grid.ColumnDefinitions>
    </Grid>
    <UniformGrid x:Name="ButtonsPanel" 
                 DockPanel.Dock="Bottom" 
                 Margin="5" 
                 Columns="1" 
                 HorizontalAlignment="Center"
                 VerticalAlignment="Bottom">
      <Button x:Name="CloseButton" Width="50" Content="Close" Margin="2" IsCancel="True"/>
    </UniformGrid>
  </DockPanel>
</Window>
